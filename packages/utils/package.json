{
  "name": "@shiro-ui/utils",
  "version": "0.0.1",
  "description": "Utility package used internally by `@shiro-ui` components.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "scripts": {
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "build": "tsup src/index.ts --format cjs,esm --dts --minify terser",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aiza-san/shiro-ui.git"
  },
  "homepage": "https://aiza-san.github.io/shise-docs/",
  "keywords": [
    "@shiro-ui/utils",
    "shiro-ui",
    "@shiro-ui"
  ],
  "author": "Aizawa-san <aizawa.dev@gmail.com>",
  "license": "MIT",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.0",
    "tailwindcss-animate": "^1.0.7"
  }
}
